<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.notifications.NotificationsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="98dp"
        android:background="@drawable/gardient"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="45dp"
            android:layout_weight="1"
            android:text="80"
            android:textAlignment="center"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="33dp"
            android:layout_weight="1"
            android:text="Ivanov Ivan"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:text="175"
            android:textAlignment="center"
            android:textColor="@color/white" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="212dp"
        android:layout_marginTop="80dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView33"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Weight"
            android:textAlignment="center"
            android:layout_marginTop="-5dp"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/textView34"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Male"
            android:layout_marginTop="-5dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/textView35"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="-5dp"
            android:text="Height"
            android:textAlignment="center"
            android:textColor="@color/white" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView37"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:paddingLeft="16dp"
        android:text="Training rest"
        android:textColor="@color/blue_bg"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/textView38"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:paddingLeft="16dp"
        android:text="Notification"
        android:textColor="@color/blue_bg"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/textView39"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="205dp"
        android:paddingLeft="16dp"
        android:text="Biometric"
        android:textColor="@color/blue_bg"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/textView40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:paddingLeft="16dp"
        android:text="Start dialog"
        android:textColor="@color/blue_bg"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/textView41"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="295dp"
        android:paddingLeft="16dp"
        android:text="Privacy Police"
        android:textColor="@color/blue_bg"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:textColor="@color/blue_bg"
        android:layout_marginTop="112dp"
        android:layout_marginLeft="335dp"
        android:layout_height="wrap_content"
        android:text="30 sec"
        android:textSize="22dp" />

    <View
        android:id="@+id/view3"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginTop="154dp"
        android:background="@color/low_grey" />

    <Button
        android:id="@+id/button4"
        android:layout_width="346dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="523dp"
        android:layout_marginRight="31dp"
        android:textAllCaps="false"
        android:background="@drawable/teal_button"
        android:fontFamily="sans-serif-light"
        android:text="Sign Out"
        android:textColor="@color/blue_bg"
        android:textSize="24dp" />

    <View
        android:id="@+id/view4"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginTop="198dp"
        android:background="@color/low_grey" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="163dp"
        android:textColorHint="@color/blue_bg"
        android:textColorLink="@color/blue_bg"
        android:layout_marginLeft="340dp"
        android:layout_weight="1"
        android:checked="true"
        android:theme="@style/SCBSwitch"
        android:keepScreenOn="false" />

    <View
        android:id="@+id/view5"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginTop="242dp"
        android:background="@color/low_grey" />

    <View
        android:id="@+id/view7"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginTop="286dp"
        android:background="@color/low_grey" />

    <View
        android:id="@+id/view8"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginTop="330dp"
        android:background="@color/low_grey" />

</FrameLayout>